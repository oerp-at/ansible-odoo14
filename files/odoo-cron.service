[Unit]
Description=Odoo Cron
After=network.target

[Service]
User=odoo
Environment="LANG=de_DE.UTF-8"
Environment="LC_ALL=de_DE.UTF-8"
WorkingDirectory=/home/odoo/odoo-oerp-14.0/odoo
ExecStart=/usr/bin/pipenv run python3 ./odoo-bin serve --config=/home/odoo/.local/etc/odoo-cron.conf
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target