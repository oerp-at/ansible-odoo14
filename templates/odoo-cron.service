[Unit]
Description={{ odoo_service }} Cron
After=network.target

[Service]
User=odoo
Environment="LANG=de_DE.UTF-8"
Environment="LC_ALL=de_DE.UTF-8"
WorkingDirectory={{ odoo_dir }}/odoo
ExecStart=/usr/bin/pipenv run python3 ./odoo-bin serve --config={{ odoo_user_dir }}/.local/etc/{{ odoo_service }}-cron.conf
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target